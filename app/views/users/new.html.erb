<h1>Crear nueva cuenta:</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%=  f.label :first_name, "Nombre" %>
      <%=  f.text_field :first_name, class: 'form-control' %>
      <%=  f.label :last_name, "Apellido" %>
      <%=  f.text_field :last_name, class: 'form-control' %>
      <%=  f.label :country_id, "Pais" %>
      <%=  f.select :country_id, options_from_collection_for_select(@countries, "id", "name"), class:'form-control' %>
      <%=  f.label :email, "E-Mail" %> 
      <%=  f.email_field :email, class: 'form-control' %>
      <%=  f.label :username, "Nickname para ser utilizado en el sitio" %> 
      <%=  f.text_field :username, class: 'form-control' %>
      <%=  f.label :password, "Password" %>
      <%=  f.password_field :password, class: 'form-control' %>
      <%=  f.label :password_confirmation, "Password confirmation" %>
      <%=  f.password_field :password_confirmation, class: 'form-control' %>
      <%=  f.submit "Crear usuario", class: "btn btn-primary" %>
    <%  end %>
  </div>
</div>