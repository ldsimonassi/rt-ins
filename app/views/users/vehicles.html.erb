<% provide(:title, "Cloudfleet - Vehiculos") %>
<div id="page-wrapper" style="min-height: 1094px">
	<div class="row">
		<div class="col-lg-12"><h1>Inventario de vehículos</h1></div>
	</div>

	<div>
		<table id="drivers" class="table table-striped table-bordered order-column" cellspacing="0" width="100%">
			<thead>
				<tr>
					<th>Marca</th>
					<th>Modelo</th>
					<th>Version</th>
					<th>Año</th>
					<th>Precio</th>
					<th>Patente</th>
					<th># Chasis</th>
					<th># Motor</th>
					<th># Dispositivo</th>
				</tr>
			</thead>

			<tfoot>
				<tr>
					<th>Marca</th>
					<th>Modelo</th>
					<th>Version</th>
					<th>Año</th>
					<th>Precio</th>
					<th>Patente</th>
					<th># Chasis</th>
					<th># Motor</th>
					<th># Dispositivo</th>				
				</tr>
			</tfoot>

			<tbody>
				<% @vehicles.order('created_at desc').each do |v|%>
				<tr>
					<td><%= v.price.version.model.brand.name %></td>
					<td><%= v.price.version.model.name %></td>
					<td><%= v.price.version.name %></td>
					<td><%= v.price.year %></td>
					<td><%= "#{v.price.currency} #{v.price.price}" %></td>
					<td><%= v.plate_no %></td>
					<td><%= v.chasis_no %></td>
					<td><%= v.engine_no %></td>
					<td><%= v.tracking_device.serial_no %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

	</div>

</div>


<script type="text/javascript">
$(document).ready(function() {
    $('#drivers').DataTable();
} );
</script>