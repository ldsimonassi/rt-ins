


<% provide(:title, "Cloudfleet - Conductores") %>
<div id="page-wrapper" style="min-height: 1094px">
	<div class="row">
		<div class="col-lg-12"><h1>Nomina de conductores</h1></div>
	</div>

	<div>
		<table id="drivers" class="table table-striped table-bordered order-column" cellspacing="0" width="100%">
			<thead>
				<tr>
					<th>Nombre</th>
					<th>Usuario</th>
					<th>Passphrase</th>
				</tr>
			</thead>

			<tfoot>
				<tr>
					<th>Nombre</th>
					<th>Id interno</th>
					<th>Passphrase</th>
				</tr>
			</tfoot>

			<tbody>
				<% @drivers.order('created_at').each do |d|%>
				<tr>
					<td><%= d.name %></td>
					<td><%= d.internal_id %></td>
					<td><%= d.passphrase %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

	</div>

</div>


<script type="text/javascript">
$(document).ready(function() {
    $('#drivers').DataTable();
} );
</script>